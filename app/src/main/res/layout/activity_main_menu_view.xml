<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android = "http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable
            name="mainViewModel"
            type="ViewModel.MainViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="FatTalkClient" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="친구목록"
            android:clickable="true"
            android:onClick="@{()->mainViewModel.FriendlistBinding()}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="채팅방"
            android:clickable="true"
            android:onClick="@{()->mainViewModel.ChatRoomsBinding()}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:onClick="@{()->mainViewModel.PlusFriendBinding()}"
            android:text="친구추가"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="친구삭제"
            android:clickable="true"
            android:onClick="@{()->mainViewModel.DeleteFriendBinding()}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="친구차단"
            android:clickable="true"
            android:onClick="@{()->mainViewModel.BlockFriendBinding()}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:onClick="@{()->mainViewModel.NotBlockFriendBinding()}"
            android:text="친구차단해제"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="회원정보수정"
            android:clickable="true"
            android:onClick="@{()->mainViewModel.ModifyUserinfoBinding()}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="로그아웃"
            android:clickable="true"
            android:onClick="@{()->mainViewModel.LogoutBinding()}"
            android:textSize="24sp" />


    </LinearLayout>


</layout>
